{
  "name": "mage",
  "version": "1.0.0",
  "description": "A static CMS generator.",
  "main": "mage.js",
  "scripts": {
    "build:jade": "jade editor/index.jade",
    "include": "ncp ./node_modules/json-editor/dist/jsoneditor.js ./editor/js/lib/jsoneditor.js",
    "lint": "eslint --fix server.js js/cms.js",
    "server": "node mage.js",
    "start": "npm-run-all --parallel watch:** server",
    "watch:jade": "chokidar 'editor/index.jade' -c 'npm run build:jade'"
  },
  "author": "@gvn",
  "license": "MPL",
  "dependencies": {
    "hapi": "12.1.0",
    "inert": "3.2.0",
    "json-editor": "0.7.23"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "eslint": "^1.10.3",
    "jade": "^1.11.0",
    "mofo-style": "^2.0.0",
    "npm-run-all": "^1.5.0"
  },
  "eslintConfig": {
    "extends": "./node_modules/mofo-style/.eslintrc.yaml",
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": 0
    }
  }
}
