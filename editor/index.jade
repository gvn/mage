doctype html
html
  head
    meta(charset='utf-8')
    title CMS
    style
      include _css/cms.css
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css')
  body
    .page-header
      h1 Mage
    
    #actions.row
      .col-md-2.text-left
        select.form-control
          each locale in locales
            option=locale
          
      .col-md-10.text-right
        button.btn.btn-primary#submit
          .glyphicon.glyphicon-save  Save
      
    #editor
  
  script(type='text/json', id='config')
    include ../env.json  
  script(src='/edit/_js/lib/jsoneditor.js')
  script(src='/edit/_js/cms.js')
